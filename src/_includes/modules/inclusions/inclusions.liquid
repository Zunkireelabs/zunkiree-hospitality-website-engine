{%- comment -%}
  MODULE: inclusions
  PURPOSE: Display what's included checklist
  ACTIVATION: site.engine.modules.inclusions
  DATA SOURCE: homepage.inclusions_section
{%- endcomment -%}

{%- if site.engine.modules.inclusions and homepage.inclusions_section.inclusions.size > 0 -%}
<section class="inclusions-section" id="inclusions">
    <div class="inclusions-container">
        <div class="inclusions-header">
            <h2 class="inclusions-title">{{ homepage.inclusions_section.headline }}</h2>
            <p class="inclusions-intro">{{ homepage.inclusions_section.intro }}</p>
        </div>

        <div class="inclusions-grid">
            {% for item in homepage.inclusions_section.inclusions %}
            <div class="inclusion-item">
                <div class="inclusion-icon">
                    {% if item.icon == 'plane' %}
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"/></svg>
                    {% elsif item.icon == 'bus' %}
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M8 6v6"/><path d="M15 6v6"/><path d="M2 12h19.6"/><path d="M18 18h3s.5-1.7.8-2.8c.1-.4.2-.8.2-1.2 0-.4-.1-.8-.2-1.2l-1.4-5C20.1 6.8 19.1 6 18 6H4a2 2 0 0 0-2 2v10h3"/><circle cx="7" cy="18" r="2"/><path d="M9 18h5"/><circle cx="16" cy="18" r="2"/></svg>
                    {% elsif item.icon == 'utensils' %}
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg>
                    {% elsif item.icon == 'snowflake' %}
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="2" x2="22" y1="12" y2="12"/><line x1="12" x2="12" y1="2" y2="22"/><path d="m20 16-4-4 4-4"/><path d="m4 8 4 4-4 4"/><path d="m16 4-4 4-4-4"/><path d="m8 20 4-4 4 4"/></svg>
                    {% elsif item.icon == 'jacket' %}
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M15.5 2H8.6c-.4 0-.8.2-1.1.5-.6.7-1.2 1.8-1.4 3.1C5.7 8.3 6 11 6.9 13c.4.9 1 1.8 1.7 2.4.4.4.9.6 1.4.6h4c.5 0 1-.2 1.4-.6.7-.6 1.3-1.5 1.7-2.4.9-2 1.2-4.7.8-7.4-.2-1.3-.8-2.4-1.4-3.1-.3-.3-.7-.5-1-.5z"/><path d="M12 2v20"/><path d="M5 10H2"/><path d="M22 10h-3"/><path d="M5 14H2"/><path d="M22 14h-3"/></svg>
                    {% endif %}
                </div>
                <h4 class="inclusion-title">{{ item.title }}</h4>
                <p class="inclusion-desc">{{ item.description }}</p>
            </div>
            {% endfor %}
        </div>

        {% if homepage.inclusions_section.disclaimer %}
        <div class="inclusions-note">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
            <p>{{ homepage.inclusions_section.disclaimer }}</p>
        </div>
        {% endif %}
    </div>
</section>
{%- endif -%}
