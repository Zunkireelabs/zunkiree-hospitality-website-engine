<section class="hero {% unless homepage.hero.search_bar %}hero-simple{% endunless %}" id="hero">
    <div class="hero-media">
        {% if homepage.hero.images and homepage.hero.images.size > 0 %}
        <!-- Image Slider -->
        <div class="hero-slider">
            {% for image in homepage.hero.images %}
            <div class="hero-slide {% if forloop.first %}active{% endif %}" style="background-image: url('{{ image }}')"></div>
            {% endfor %}
        </div>
        {% else %}
        <!-- Single Background Image -->
        <div class="hero-image-placeholder" {% if homepage.hero.background_image %}style="background-image: url('{{ homepage.hero.background_image }}')"{% endif %}></div>
        {% endif %}
        <div class="hero-overlay"></div>
    </div>

    <div class="hero-content container">
        <h1 class="hero-headline">{{ homepage.hero.headline }}</h1>
        <p class="hero-tagline">{{ homepage.hero.tagline }}</p>

        {% unless homepage.hero.search_bar %}
        <!-- CTA Buttons - shown when search bar is disabled -->
        <div class="hero-ctas">
            {% if homepage.hero.cta_primary %}
            <a href="{{ homepage.hero.cta_primary.url }}" class="hero-cta-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                <span>{{ homepage.hero.cta_primary.text }}</span>
            </a>
            {% endif %}
            {% if homepage.hero.cta_secondary %}
            <a href="{{ homepage.hero.cta_secondary.url }}" class="hero-cta-secondary" target="_blank">
