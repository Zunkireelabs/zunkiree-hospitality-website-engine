{% assign inquiry = homepage.inquiry_section %}

<section class="inquiry-section" id="inquiry">
    <div class="inquiry-container">
        <div class="inquiry-header">
            <h2 class="inquiry-headline">{{ inquiry.headline }}</h2>
            <p class="inquiry-intro">{{ inquiry.intro }}</p>
        </div>

        <div class="inquiry-card">
            <form class="inquiry-form" action="{{ inquiry.form_action }}" method="POST">
                <!-- Progress Bar -->
                <div class="inquiry-progress">
                    <div class="progress-bar">
                        <div class="progress-fill" data-step="1"></div>
                    </div>
                    <div class="progress-info">
                        <span class="progress-percent">33%</span>
                        <span class="progress-step">Step 1 of 3</span>
                    </div>
                </div>

                {% for step in inquiry.steps %}
                {% if step.id == "trip_length" %}
                <!-- Step 1: Trip Length -->
                <div class="inquiry-step active" data-step="1">
                    <h3 class="step-question">{{ step.question }}</h3>
                    <div class="option-cards">
                        {% for option in step.options %}
                        <label class="option-card">
                            <input type="radio" name="{{ step.id }}" value="{{ option.value }}" {% if forloop.first %}checked{% endif %}>
                            <span class="option-content">
                                <span class="option-radio"></span>
                                <span class="option-label">{{ option.label }}</span>
                                <span class="option-desc">{{ option.description }}</span>
                            </span>
                        </label>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                {% if step.id == "month" %}
                <!-- Step 2: Month -->
                <div class="inquiry-step" data-step="2">
                    <h3 class="step-question">{{ step.question }}</h3>
                    <div class="option-cards">
                        {% for option in step.options %}
                        <label class="option-card">
                            <input type="radio" name="{{ step.id }}" value="{{ option.value }}" {% if forloop.first %}checked{% endif %}>
                            <span class="option-content">
                                <span class="option-radio"></span>
                                <span class="option-label">{{ option.label }}</span>
                                <span class="option-desc">{{ option.description }}</span>
                            </span>
                        </label>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                {% if step.id == "contact" %}
                <!-- Step 3: Contact & Group -->
                <div class="inquiry-step" data-step="3">
                    <h3 class="step-question">{{ step.question }}</h3>

                    <!-- Travelers Counter -->
                    <div class="travelers-group">
                        {% for traveler in step.travelers %}
                        <div class="traveler-row">
                            <div class="traveler-info">
                                <span class="traveler-label">{{ traveler.label }}</span>
                                <span class="traveler-desc">{{ traveler.description }}</span>
                            </div>
                            <div class="traveler-counter">
                                <button type="button" class="counter-btn minus" data-type="{{ traveler.type }}" data-min="{{ traveler.min }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/></svg>
                                </button>
                                <input type="number" name="{{ traveler.type }}" value="{{ traveler.default }}" min="{{ traveler.min }}" max="{{ traveler.max }}" class="counter-value" readonly>
                                <button type="button" class="counter-btn plus" data-type="{{ traveler.type }}" data-max="{{ traveler.max }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
                                </button>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    <!-- Contact Fields -->
                    <div class="contact-fields">
                        {% for field in step.fields %}
                        <div class="form-field">
                            <label for="inquiry-{{ field.name }}">{{ field.label }}</label>
                            <input
                                type="{{ field.type }}"
                                id="inquiry-{{ field.name }}"
                                name="{{ field.name }}"
                                placeholder="{{ field.placeholder }}"
                                {% if field.required %}required{% endif %}
                            >
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
                {% endfor %}

                <!-- Navigation Buttons -->
                <div class="inquiry-nav">
                    <button type="button" class="btn-back" style="visibility: hidden;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
                        <span>{{ inquiry.buttons.back }}</span>
                    </button>
                    <button type="button" class="btn-next">
                        <span>{{ inquiry.buttons.next }}</span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                    </button>
                    <button type="submit" class="btn-submit" style="display: none;">
                        <span>{{ inquiry.buttons.submit }}</span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                    </button>
                </div>
            </form>

            <!-- Success State -->
            <div class="inquiry-success" style="display: none;">
                <div class="success-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                </div>
                <h3 class="success-headline">{{ inquiry.success.headline }}</h3>
                <p class="success-message">{{ inquiry.success.message }}</p>
                <p class="success-sub">{{ inquiry.success.sub_message }}</p>
                <a href="{{ inquiry.success.cta.url }}" class="success-cta">{{ inquiry.success.cta.text }}</a>
            </div>
        </div>

        <!-- Trust Badges -->
        <div class="inquiry-trust">
            {% for badge in inquiry.trust_badges %}
            <div class="trust-badge">
                {% if badge.icon == "check" %}
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                {% elsif badge.icon == "clock" %}
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                {% elsif badge.icon == "shield" %}
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                {% endif %}
                <span>{{ badge.text }}</span>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
