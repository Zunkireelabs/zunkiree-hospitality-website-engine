<section class="why-lapland-section" id="why-lapland">
    <div class="why-lapland-container">
        <div class="why-lapland-header">
            <h2 class="why-lapland-title">{{ homepage.why_section.headline }}</h2>
            <p class="why-lapland-subtitle">{{ homepage.why_section.intro }}</p>
        </div>

        <div class="why-lapland-grid">
            {% for benefit in homepage.why_section.benefits %}
            <div class="why-lapland-card">
                <div class="why-lapland-icon">
                    {% if forloop.index == 1 %}
                    <!-- Full-board comfort - utensils icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg>
                    {% elsif forloop.index == 2 %}
                    <!-- Guided experiences - compass icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"/></svg>
                    {% elsif forloop.index == 3 %}
                    <!-- Authentic base - map pin icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                    {% elsif forloop.index == 4 %}
                    <!-- Practical support - heart handshake icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/><path d="M12 5 9.04 7.96a2.17 2.17 0 0 0 0 3.08v0c.82.82 2.13.85 3 .07l2.07-1.9a2.82 2.82 0 0 1 3.79 0l2.96 2.66"/><path d="m18 15-2-2"/><path d="m15 18-2-2"/></svg>
                    {% endif %}
                </div>
                <h3 class="why-lapland-card-title">{{ benefit.title }}</h3>
                <p class="why-lapland-card-desc">{{ benefit.description }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
.why-lapland-section {
    background-color: #FDF8F3;
    padding: var(--space-12) 0;
}

.why-lapland-container {
    max-width: var(--container-2xl);
    margin: 0 auto;
    padding: 0 var(--space-8);
}

.why-lapland-header {
    text-align: left;
    margin-bottom: var(--space-10);
}

.why-lapland-title {
    font-size: 2.5rem;
    font-weight: 400;
    color: black;
    margin-bottom: var(--space-3);
    font-style: normal;
}

.why-lapland-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0;
    line-height: 1.6;
}

.why-lapland-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-8);
}

.why-lapland-card {
    text-align: left;
    padding: var(--space-4);
}

.why-lapland-icon {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 72px;
    height: 72px;
    margin: 0 0 var(--space-5) 0;
    color: black;
}

.why-lapland-icon svg {
    width: 40px;
    height: 40px;
}

.why-lapland-card-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: black;
    margin-bottom: var(--space-2);
}

.why-lapland-card-desc {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
}

@media (max-width: 1024px) {
    .why-lapland-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-6);
    }
}

@media (max-width: 768px) {
    .why-lapland-section {
        padding: var(--space-10) 0;
    }

    .why-lapland-container {
        padding: 0 var(--space-4);
    }

    .why-lapland-title {
        font-size: 2rem;
    }

    .why-lapland-subtitle {
        font-size: var(--text-base);
    }

    .why-lapland-grid {
        grid-template-columns: 1fr;
        gap: var(--space-6);
    }

    .why-lapland-card {
        padding: var(--space-2);
    }

    .why-lapland-icon {
        width: 64px;
        height: 64px;
        margin-bottom: var(--space-4);
    }

    .why-lapland-icon svg {
        width: 36px;
        height: 36px;
    }
}
</style>
