                <span>{{ homepage.hero.cta_secondary.text }}</span>
            </a>
            {% endif %}
        </div>
        {% endunless %}
    </div>

    {% if homepage.hero.search_bar %}
    <!-- Search Bar - OUTSIDE hero-content so it positions relative to .hero -->
    <div class="hero-search-bar">
            <div class="search-bar-inner">
                <!-- Experience Field -->
                <div class="search-field" data-field="experience">
                    <span class="search-field-text">Any experience</span>
                    <svg class="search-field-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2l1.09 3.26L16 6l-2.91.74L12 10l-1.09-3.26L8 6l2.91-.74L12 2z"/><path d="m5 15-1.5 4.5L8 18l-1.5 4.5"/><path d="m19 15 1.5 4.5L16 18l1.5 4.5"/></svg>
