}

.bento-left img,
.bento-right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.bento-middle {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    height: 400px;
}

.bento-middle-top,
.bento-middle-bottom {
    flex: 1;
    border-radius: var(--radius-lg);
    overflow: hidden;
    min-height: 0;
