    .inquiry-section {
        padding: var(--space-12) 0;
    }

    .inquiry-headline {
        font-size: 2rem;
    }

    .inquiry-card {
        padding: var(--space-6);
    }

    .option-cards {
        grid-template-columns: 1fr;
        gap: var(--space-3);
    }

