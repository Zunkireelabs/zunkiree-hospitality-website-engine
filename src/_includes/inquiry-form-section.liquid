    font-size: 1.25rem !important;
    font-weight: 600 !important;
    color: #000000 !important;
    margin-bottom: 1.5rem !important;
    text-align: center !important;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
}

