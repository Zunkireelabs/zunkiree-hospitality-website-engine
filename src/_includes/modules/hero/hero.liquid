{%- comment -%}
  MODULE: hero
  PURPOSE: Homepage hero section with optional search bar or CTAs
  ACTIVATION: site.engine.modules.hero
  DATA SOURCE: homepage.hero
  COMPLEXITY: HIGH
  RISK: HIGH
{%- endcomment -%}

{%- assign has_search_bar = homepage.hero.search_bar -%}
{%- assign has_cta = homepage.hero.cta_primary or homepage.hero.cta_secondary -%}
{%- if site.engine.modules.hero and homepage.hero.headline and (has_search_bar or has_cta) -%}
<section class="hero {% unless homepage.hero.search_bar %}hero-simple{% endunless %}" id="hero">
    <div class="hero-media">
        {% if homepage.hero.images and homepage.hero.images.size > 0 %}
        <!-- Image Slider -->
        <div class="hero-slider">
            {% for image in homepage.hero.images %}
            <div class="hero-slide {% if forloop.first %}active{% endif %}" style="background-image: url('{{ image }}')"></div>
            {% endfor %}
        </div>
        {% else %}
        <!-- Single Background Image -->
        <div class="hero-image-placeholder" {% if homepage.hero.background_image %}style="background-image: url('{{ homepage.hero.background_image }}')"{% endif %}></div>
        {% endif %}
        <div class="hero-overlay"></div>
    </div>

    <div class="hero-content container">
        <h1 class="hero-headline">{{ homepage.hero.headline }}</h1>
        <p class="hero-tagline">{{ homepage.hero.tagline }}</p>

        {% unless homepage.hero.search_bar %}
        <!-- CTA Buttons - shown when search bar is disabled -->
        <div class="hero-ctas">
            {% if homepage.hero.cta_primary %}
            <a href="{{ homepage.hero.cta_primary.url }}" class="hero-cta-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                <span>{{ homepage.hero.cta_primary.text }}</span>
            </a>
            {% endif %}
            {% if homepage.hero.cta_secondary %}
            <a href="{{ homepage.hero.cta_secondary.url }}" class="hero-cta-secondary" target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
                <span>{{ homepage.hero.cta_secondary.text }}</span>
            </a>
            {% endif %}
        </div>
        {% endunless %}
    </div>

    {% if homepage.hero.search_bar %}
    <!-- Search Bar - OUTSIDE hero-content so it positions relative to .hero -->
    <div class="hero-search-bar">
            <div class="search-bar-inner">
                <!-- Experience/Category Field -->
                {% if homepage.hero.search_bar.experiences %}
                <div class="search-field" data-field="experience">
                    <span class="search-field-text">{{ homepage.hero.search_bar.experiences.label | default: "Any experience" }}</span>
                    <svg class="search-field-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2l1.09 3.26L16 6l-2.91.74L12 10l-1.09-3.26L8 6l2.91-.74L12 2z"/><path d="m5 15-1.5 4.5L8 18l-1.5 4.5"/><path d="m19 15 1.5 4.5L16 18l1.5 4.5"/></svg>
                    <div class="search-dropdown">
                        <div class="dropdown-header">{{ homepage.hero.search_bar.experiences.header | default: "Select Experiences" }}</div>
                        {% for option in homepage.hero.search_bar.experiences.options %}
                        <label class="dropdown-item">{% if option.icon %}<span class="item-icon">{{ option.icon }}</span>{% endif %} {{ option.label }} <input type="checkbox"><span class="checkmark"></span></label>
                        {% endfor %}
                        <div class="dropdown-actions">
                            <button type="button" class="btn-clear">Clear</button>
                            <button type="button" class="btn-apply">Apply</button>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- Month/Date Field -->
                {% if homepage.hero.search_bar.months %}
                <div class="search-field" data-field="month">
                    <span class="search-field-text">{{ homepage.hero.search_bar.months.label | default: "Any month" }}</span>
                    <svg class="search-field-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
                    <div class="search-dropdown">
                        <div class="dropdown-header">{{ homepage.hero.search_bar.months.header | default: "Select Month" }}</div>
                        {% for option in homepage.hero.search_bar.months.options %}
                        <label class="dropdown-item">{{ option }} <input type="checkbox"><span class="checkmark"></span></label>
                        {% endfor %}
                        <div class="dropdown-actions">
                            <button type="button" class="btn-clear">Clear</button>
                            <button type="button" class="btn-apply">Apply</button>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- Location Field -->
                {% if homepage.hero.search_bar.locations %}
                <div class="search-field" data-field="location">
                    <span class="search-field-text">{{ homepage.hero.search_bar.locations.label | default: "Any location" }}</span>
                    <svg class="search-field-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"/></svg>
                    <div class="search-dropdown">
                        <div class="dropdown-header">{{ homepage.hero.search_bar.locations.header | default: "Select Location" }}</div>
                        {% for option in homepage.hero.search_bar.locations.options %}
                        <label class="dropdown-item">{{ option }} <input type="checkbox"><span class="checkmark"></span></label>
                        {% endfor %}
                        <div class="dropdown-actions">
                            <button type="button" class="btn-clear">Clear</button>
                            <button type="button" class="btn-apply">Apply</button>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- Travelers/Guests Field -->
                {% if homepage.hero.search_bar.travelers %}
                <div class="search-field" data-field="travelers">
                    <span class="search-field-text">{{ homepage.hero.search_bar.travelers.label | default: "Travelers" }}</span>
                    <svg class="search-field-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                    <div class="search-dropdown travelers-dropdown">
                        <div class="dropdown-header">{{ homepage.hero.search_bar.travelers.header | default: "Travelers" }}</div>
                        {% for type in homepage.hero.search_bar.travelers.types %}
                        <div class="traveler-row">
                            <div class="traveler-info">
                                <span class="traveler-type">{{ type.label }}</span>
                                <span class="traveler-desc">{{ type.description }}</span>
                            </div>
                            <div class="traveler-counter">
                                <button type="button" class="counter-btn minus" data-type="{{ type.type }}">âˆ’</button>
                                <span class="counter-value" data-type="{{ type.type }}">{{ type.default | default: 0 }}</span>
                                <button type="button" class="counter-btn plus" data-type="{{ type.type }}">+</button>
                            </div>
                        </div>
                        {% endfor %}
                        <div class="dropdown-actions">
                            <button type="button" class="btn-clear">Clear</button>
                            <button type="button" class="btn-apply">Apply</button>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- Search Button -->
                <a href="{{ homepage.hero.search_bar.button.url | default: '/request-quote' }}" class="search-btn">{{ homepage.hero.search_bar.button.text | default: "Search" }}</a>
            </div>
            <!-- Helper Row -->
            {% if homepage.hero.search_bar.helper %}
            <div class="search-helper-row">
                <p class="helper-text">{{ homepage.hero.search_bar.helper.text }}</p>
                <a href="{{ homepage.hero.search_bar.helper.callback_url }}" class="helper-callback">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                    <span>{{ homepage.hero.search_bar.helper.callback_text | default: "Request Callback" }}</span>
                </a>
            </div>
            {% endif %}
        </div>
    {% endif %}
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Hero Image Slider
    const slides = document.querySelectorAll('.hero-slide');
    if (slides.length > 1) {
        let currentSlide = 0;
        setInterval(function() {
            slides[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + 1) % slides.length;
            slides[currentSlide].classList.add('active');
        }, 5000);
    }

    // Search field dropdowns
    const searchFields = document.querySelectorAll('.search-field');

    function closeAllDropdowns() {
        searchFields.forEach(field => field.classList.remove('active'));
    }

    searchFields.forEach(field => {
        field.addEventListener('click', function(e) {
            e.stopPropagation();
            const wasActive = this.classList.contains('active');
            closeAllDropdowns();
            if (!wasActive) {
                this.classList.add('active');
            }
        });
    });

    document.addEventListener('click', function(e) {
        if (!e.target.closest('.search-field')) {
            closeAllDropdowns();
        }
    });
});
</script>
{%- endif -%}
