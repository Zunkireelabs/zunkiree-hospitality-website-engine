/* Trust Badges */
.inquiry-trust {
    display: flex;
    justify-content: center;
    gap: var(--space-8);
    margin-top: var(--space-6);
    flex-wrap: wrap;
}

.trust-badge {
    display: flex;
    align-items: center;
    gap: var(--space-2);
}

.trust-badge svg {
    color: #10B981;
}

.trust-badge span {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
}

