<section class="location-section" id="location">
    <div class="location-container">
        <!-- Header -->
        <div class="location-header">
            <h2 class="location-title">{{ homepage.location_section.headline }}</h2>
            <p class="location-intro">{{ homepage.location_section.intro }}</p>
        </div>

        <!-- Bento Image Grid -->
        <div class="location-bento">
            <div class="bento-left">
                <picture>
                    <source type="image/avif" srcset="/assets/media/location/glass-suite-640w.avif">
                    <source type="image/webp" srcset="/assets/media/location/glass-suite-640w.webp">
                    <img src="/assets/media/location/glass-suite.jpg" alt="Arctic Glass Suite at Harriniva" loading="lazy">
                </picture>
            </div>
            <div class="bento-middle">
                <div class="bento-middle-top">
                    <picture>
                        <source type="image/avif" srcset="/assets/media/location/restaurant-640w.avif">
                        <source type="image/webp" srcset="/assets/media/location/restaurant-640w.webp">
                        <img src="/assets/media/location/restaurant.jpg" alt="Harriniva Resort Restaurant" loading="lazy">
                    </picture>
                </div>
                <div class="bento-middle-bottom">
                    <picture>
                        <source type="image/avif" srcset="/assets/media/location/cabin-bedroom-640w.avif">
                        <source type="image/webp" srcset="/assets/media/location/cabin-bedroom-640w.webp">
                        <img src="/assets/media/location/cabin-bedroom.jpg" alt="Cozy Cabin Bedroom" loading="lazy">
                    </picture>
                </div>
            </div>
            <div class="bento-right">
                <picture>
                    <source type="image/avif" srcset="/assets/media/location/winter-landscape-1080w.avif">
                    <source type="image/webp" srcset="/assets/media/location/winter-landscape-1080w.webp">
                    <img src="/assets/media/location/winter-landscape.jpg" alt="Winter Landscape in Finnish Lapland" loading="lazy">
                </picture>
            </div>
        </div>

        <!-- What Families Love -->
        <div class="location-features">
            <h4 class="location-features-title">{{ homepage.location_section.subheadline }}</h4>
            <ul class="location-features-list">
                {% for feature in homepage.location_section.features %}
                <li>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                    <span>{{ feature }}</span>
                </li>
                {% endfor %}
            </ul>
        </div>

        <!-- Stats -->
        <div class="location-stats">
            <div class="stat-item">
                <div class="stat-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"/></svg>
                </div>
                <div class="stat-content">
                    <span class="stat-number">~1 hour</span>
                    <span class="stat-label">From Kittila Airport</span>
                </div>
            </div>
            <div class="stat-item">
                <div class="stat-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>
                </div>
                <div class="stat-content">
                    <span class="stat-number">68Â°N</span>
                    <span class="stat-label">Arctic Circle Location</span>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
