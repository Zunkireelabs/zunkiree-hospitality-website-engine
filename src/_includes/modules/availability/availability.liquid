{%- comment -%}
  MODULE: availability
  PURPOSE: Display availability dates with CTA
  ACTIVATION: site.engine.modules.availability
  DATA SOURCE: homepage.availability_section
  COMPLEXITY: LOW
  RISK: LOW
  TECHNICAL DEBT: Hardcoded dates (Nov/Dec 2026) and features - Phase 2 candidate
{%- endcomment -%}

{%- if site.engine.modules.availability
  and homepage.availability_section
  and homepage.availability_section.cta
-%}
<section class="availability-section" id="availability">
    <div class="availability-container">
        <div class="availability-header">
            <h2 class="availability-title">{{ homepage.availability_section.headline }}</h2>
            <p class="availability-intro">{{ homepage.availability_section.intro }}</p>
        </div>

        <div class="availability-card">
            <div class="availability-row">
                <span class="availability-month">November</span>
                <span class="availability-dates">28 Nov - 30 Nov 2026</span>
            </div>
            <div class="availability-row">
                <span class="availability-month">December</span>
                <span class="availability-dates">1 Dec - 24 Dec 2026</span>
            </div>
        </div>

        <div class="availability-features">
            <div class="feature-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                <span>3 & 4 night options</span>
            </div>
            <div class="feature-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                <span>Full board included</span>
            </div>
            <div class="feature-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                <span>Arctic activities</span>
            </div>
        </div>

        <div class="availability-cta-wrapper">
            <a href="{{ homepage.availability_section.cta.url }}" class="availability-cta-button">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="2" x2="22" y1="12" y2="12"/><line x1="12" x2="12" y1="2" y2="22"/><path d="m20 16-4-4 4-4"/><path d="m4 8 4 4-4 4"/><path d="m16 4-4 4-4-4"/><path d="m8 20 4-4 4 4"/></svg>
                <span>{{ homepage.availability_section.cta.text }}</span>
            </a>
            <svg class="availability-cta-arrow" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </div>

        <div class="availability-note">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
            <p>{{ homepage.availability_section.note }}</p>
        </div>
    </div>
</section>
{%- endif -%}
